server {

  listen 80;

  location / {
    root   /usr/share/nginx/html;
    index  index.html index.htm;
    try_files $uri $uri/ /index.html;
    error_page 405 = $uri;
  }
  location /api {
    proxy_pass http://backend:8081;
    proxy_cookie_path ~*^/.* /;
  }

  error_page   500 502 503 504  /50x.html;

  location = /50x.html {
    root   /usr/share/nginx/html;
  }

}
